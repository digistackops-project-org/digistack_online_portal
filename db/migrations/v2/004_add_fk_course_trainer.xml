<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

  <changeSet id="004" author="admin-portal-v2" labels="v2" context="dev,staging,prod">
    <comment>Add FK: course.trainer_id -> trainer.id (SET NULL on delete for flexibility)</comment>

    <addForeignKeyConstraint
      baseTableName="course"
      baseColumnNames="trainer_id"
      constraintName="fk_course_trainer"
      referencedTableName="trainer"
      referencedColumnNames="id"
      onDelete="SET NULL"
      onUpdate="CASCADE"/>
  </changeSet>

  <!-- Trainer table: add course_id after course table exists -->
  <changeSet id="005" author="admin-portal-v2" labels="v2" context="dev,staging,prod">
    <comment>Add course_id column to trainer table</comment>

    <addColumn tableName="trainer">
      <column name="course_id" type="BIGINT">
        <constraints nullable="true"/>
      </column>
    </addColumn>

    <addForeignKeyConstraint
      baseTableName="trainer"
      baseColumnNames="course_id"
      constraintName="fk_trainer_course"
      referencedTableName="course"
      referencedColumnNames="id"
      onDelete="SET NULL"
      onUpdate="CASCADE"/>

    <!-- VERSION 3 PLACEHOLDER -->
    <!-- When v3 arrives, add new changeSets in v3/ folder and include in master -->
  </changeSet>

</databaseChangeLog>
