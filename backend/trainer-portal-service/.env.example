# App
APP_ENV=development
APP_PORT=4004
APP_HOST=0.0.0.0
APP_DEBUG=false

# Database (same employeedb shared with Admin Portal)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=employeedb
DB_USER=postgres
DB_PASSWORD=yourpassword
